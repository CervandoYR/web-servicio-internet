{"ast":null,"code":"import axios from \"axios\";\nimport { Form, Field, ErrorMessage, defineRule, configure } from \"vee-validate\";\nimport { required, email } from \"@vee-validate/rules\";\n\n// Reglas personalizadas\ndefineRule(\"onlyLetters\", value => {\n  const onlyLettersRegex = /^[a-zA-ZáéíóúÁÉÍÓÚñÑ\\s]+$/;\n  if (!value) return true;\n  return onlyLettersRegex.test(value) || \"El nombre no debe contener números\";\n});\ndefineRule(\"textWithNumbers\", value => {\n  const onlyNumbersRegex = /^[0-9]+$/;\n  if (!value) return true;\n  return !onlyNumbersRegex.test(value) || \"El mensaje no puede ser solo números\";\n});\ndefineRule(\"required\", required);\ndefineRule(\"email\", email);\n\n// Configuración en español\nconfigure({\n  generateMessage: context => {\n    const messages = {\n      required: `El campo ${context.field} es obligatorio.`,\n      email: \"Por favor, introduce un correo electrónico válido.\",\n      onlyLetters: \"El nombre no debe contener números\",\n      textWithNumbers: \"El mensaje no puede ser solo números\"\n    };\n    return messages[context.rule.name] || `Error en el campo ${context.field}`;\n  }\n});\nexport default {\n  name: \"ContactPage\",\n  components: {\n    Form,\n    Field,\n    ErrorMessage\n  },\n  data() {\n    return {\n      name: \"\",\n      email: \"\",\n      message: \"\",\n      hoverSubmit: false,\n      formSubmitted: false // Estado para controlar la visibilidad del mensaje\n    };\n  },\n  methods: {\n    async submitForm() {\n      try {\n        // Simulación de envío a un backend\n        await axios.post(\"/api/contact\", {\n          name: this.name,\n          email: this.email,\n          message: this.message\n        });\n\n        // Resetear formulario\n        this.name = \"\";\n        this.email = \"\";\n        this.message = \"\";\n\n        // Mostrar mensaje de éxito\n        this.formSubmitted = true;\n\n        // Ocultar mensaje después de 3 segundos\n        setTimeout(() => {\n          this.formSubmitted = false;\n        }, 3000);\n      } catch (error) {\n        console.error(\"Error al enviar el formulario:\", error.message);\n        alert(\"Error al enviar el formulario. Intente nuevamente.\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","Form","Field","ErrorMessage","defineRule","configure","required","email","value","onlyLettersRegex","test","onlyNumbersRegex","generateMessage","context","messages","field","onlyLetters","textWithNumbers","rule","name","components","data","message","hoverSubmit","formSubmitted","methods","submitForm","post","setTimeout","error","console","alert"],"sources":["C:\\Users\\yacta\\Desktop\\S16_TG_JS\\frontend\\src\\views\\ContactPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"d-flex justify-content-center align-items-center min-vh-100\">\r\n    <div class=\"contact-page container p-5 shadow rounded-3 bg-light\">\r\n      <h1 class=\"text-center mb-4 text-primary fw-bold\">Contáctanos</h1>\r\n      <p class=\"text-center text-muted mb-5\">\r\n        Si está interesado en matricular a sus hijos, complete el formulario y nos comunicaremos con usted.\r\n      </p>\r\n\r\n      <!-- Mensaje de éxito -->\r\n      <div v-if=\"formSubmitted\" class=\"alert alert-success text-center animate__animated animate__fadeIn\" role=\"alert\">\r\n        Mensaje enviado correctamente.\r\n      </div>\r\n\r\n      <Form @submit=\"submitForm\" v-slot=\"{ meta }\" class=\"animate__animated animate__fadeIn\">\r\n        <div class=\"mb-4\">\r\n          <label for=\"name\" class=\"form-label text-primary fw-semibold\">Nombre</label>\r\n          <Field\r\n            type=\"text\"\r\n            class=\"form-control border-primary\"\r\n            id=\"name\"\r\n            name=\"name\"\r\n            rules=\"required|onlyLetters\"\r\n            v-model=\"name\"\r\n          />\r\n          <ErrorMessage name=\"name\" class=\"text-danger small mt-1 d-block\" />\r\n        </div>\r\n        <div class=\"mb-4\">\r\n          <label for=\"email\" class=\"form-label text-primary fw-semibold\">Correo Electrónico</label>\r\n          <Field\r\n            type=\"email\"\r\n            class=\"form-control border-primary\"\r\n            id=\"email\"\r\n            name=\"email\"\r\n            rules=\"required|email\"\r\n            v-model=\"email\"\r\n          />\r\n          <ErrorMessage name=\"email\" class=\"text-danger small mt-1 d-block\" />\r\n        </div>\r\n        <div class=\"mb-4\">\r\n          <label for=\"message\" class=\"form-label text-primary fw-semibold\">Mensaje</label>\r\n          <Field\r\n            as=\"textarea\"\r\n            class=\"form-control border-primary fixed-textarea\"\r\n            id=\"message\"\r\n            name=\"message\"\r\n            rules=\"required|textWithNumbers\"\r\n            v-model=\"message\"\r\n          />\r\n          <ErrorMessage name=\"message\" class=\"text-danger small mt-1 d-block\" />\r\n        </div>\r\n        <div class=\"text-center\">\r\n          <button\r\n            type=\"submit\"\r\n            class=\"btn btn-primary px-5 py-2\"\r\n            :disabled=\"!meta.valid\"\r\n            style=\"transition: all 0.3s;\"\r\n            @mouseover=\"hoverSubmit = true\"\r\n            @mouseleave=\"hoverSubmit = false\"\r\n            :class=\"{ 'btn-danger': hoverSubmit }\"\r\n          >\r\n            Enviar\r\n          </button>\r\n        </div>\r\n      </Form>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from \"axios\";\r\nimport { Form, Field, ErrorMessage, defineRule, configure } from \"vee-validate\";\r\nimport { required, email } from \"@vee-validate/rules\";\r\n\r\n// Reglas personalizadas\r\ndefineRule(\"onlyLetters\", (value) => {\r\n  const onlyLettersRegex = /^[a-zA-ZáéíóúÁÉÍÓÚñÑ\\s]+$/;\r\n  if (!value) return true;\r\n  return onlyLettersRegex.test(value) || \"El nombre no debe contener números\";\r\n});\r\n\r\ndefineRule(\"textWithNumbers\", (value) => {\r\n  const onlyNumbersRegex = /^[0-9]+$/;\r\n  if (!value) return true;\r\n  return !onlyNumbersRegex.test(value) || \"El mensaje no puede ser solo números\";\r\n});\r\n\r\ndefineRule(\"required\", required);\r\ndefineRule(\"email\", email);\r\n\r\n// Configuración en español\r\nconfigure({\r\n  generateMessage: (context) => {\r\n    const messages = {\r\n      required: `El campo ${context.field} es obligatorio.`,\r\n      email: \"Por favor, introduce un correo electrónico válido.\",\r\n      onlyLetters: \"El nombre no debe contener números\",\r\n      textWithNumbers: \"El mensaje no puede ser solo números\",\r\n    };\r\n    return messages[context.rule.name] || `Error en el campo ${context.field}`;\r\n  },\r\n});\r\n\r\nexport default {\r\n  name: \"ContactPage\",\r\n  components: {\r\n    Form,\r\n    Field,\r\n    ErrorMessage,\r\n  },\r\n  data() {\r\n    return {\r\n      name: \"\",\r\n      email: \"\",\r\n      message: \"\",\r\n      hoverSubmit: false,\r\n      formSubmitted: false, // Estado para controlar la visibilidad del mensaje\r\n    };\r\n  },\r\n  methods: {\r\n    async submitForm() {\r\n      try {\r\n        // Simulación de envío a un backend\r\n        await axios.post(\"/api/contact\", {\r\n          name: this.name,\r\n          email: this.email,\r\n          message: this.message,\r\n        });\r\n\r\n        // Resetear formulario\r\n        this.name = \"\";\r\n        this.email = \"\";\r\n        this.message = \"\";\r\n\r\n        // Mostrar mensaje de éxito\r\n        this.formSubmitted = true;\r\n\r\n        // Ocultar mensaje después de 3 segundos\r\n        setTimeout(() => {\r\n          this.formSubmitted = false;\r\n        }, 3000);\r\n      } catch (error) {\r\n        console.error(\"Error al enviar el formulario:\", error.message);\r\n        alert(\"Error al enviar el formulario. Intente nuevamente.\");\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n.contact-page {\r\n  max-width: 800px;\r\n  margin: 0 auto;\r\n  padding: 40px;\r\n}\r\n\r\n.fixed-textarea {\r\n  height: 180px;\r\n  resize: none;\r\n}\r\n\r\n.btn-primary:hover {\r\n  background-color: #ff5733 !important;\r\n}\r\n\r\n.form-control {\r\n  font-size: 1.1rem;\r\n}\r\n\r\n.form-label {\r\n  font-size: 1.1rem;\r\n}\r\n</style>\r\n"],"mappings":"AAqEA,OAAOA,KAAI,MAAO,OAAO;AACzB,SAASC,IAAI,EAAEC,KAAK,EAAEC,YAAY,EAAEC,UAAU,EAAEC,SAAQ,QAAS,cAAc;AAC/E,SAASC,QAAQ,EAAEC,KAAI,QAAS,qBAAqB;;AAErD;AACAH,UAAU,CAAC,aAAa,EAAGI,KAAK,IAAK;EACnC,MAAMC,gBAAe,GAAI,2BAA2B;EACpD,IAAI,CAACD,KAAK,EAAE,OAAO,IAAI;EACvB,OAAOC,gBAAgB,CAACC,IAAI,CAACF,KAAK,KAAK,oCAAoC;AAC7E,CAAC,CAAC;AAEFJ,UAAU,CAAC,iBAAiB,EAAGI,KAAK,IAAK;EACvC,MAAMG,gBAAe,GAAI,UAAU;EACnC,IAAI,CAACH,KAAK,EAAE,OAAO,IAAI;EACvB,OAAO,CAACG,gBAAgB,CAACD,IAAI,CAACF,KAAK,KAAK,sCAAsC;AAChF,CAAC,CAAC;AAEFJ,UAAU,CAAC,UAAU,EAAEE,QAAQ,CAAC;AAChCF,UAAU,CAAC,OAAO,EAAEG,KAAK,CAAC;;AAE1B;AACAF,SAAS,CAAC;EACRO,eAAe,EAAGC,OAAO,IAAK;IAC5B,MAAMC,QAAO,GAAI;MACfR,QAAQ,EAAE,YAAYO,OAAO,CAACE,KAAK,kBAAkB;MACrDR,KAAK,EAAE,oDAAoD;MAC3DS,WAAW,EAAE,oCAAoC;MACjDC,eAAe,EAAE;IACnB,CAAC;IACD,OAAOH,QAAQ,CAACD,OAAO,CAACK,IAAI,CAACC,IAAI,KAAK,qBAAqBN,OAAO,CAACE,KAAK,EAAE;EAC5E;AACF,CAAC,CAAC;AAEF,eAAe;EACbI,IAAI,EAAE,aAAa;EACnBC,UAAU,EAAE;IACVnB,IAAI;IACJC,KAAK;IACLC;EACF,CAAC;EACDkB,IAAIA,CAAA,EAAG;IACL,OAAO;MACLF,IAAI,EAAE,EAAE;MACRZ,KAAK,EAAE,EAAE;MACTe,OAAO,EAAE,EAAE;MACXC,WAAW,EAAE,KAAK;MAClBC,aAAa,EAAE,KAAK,CAAE;IACxB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,UAAUA,CAAA,EAAG;MACjB,IAAI;QACF;QACA,MAAM1B,KAAK,CAAC2B,IAAI,CAAC,cAAc,EAAE;UAC/BR,IAAI,EAAE,IAAI,CAACA,IAAI;UACfZ,KAAK,EAAE,IAAI,CAACA,KAAK;UACjBe,OAAO,EAAE,IAAI,CAACA;QAChB,CAAC,CAAC;;QAEF;QACA,IAAI,CAACH,IAAG,GAAI,EAAE;QACd,IAAI,CAACZ,KAAI,GAAI,EAAE;QACf,IAAI,CAACe,OAAM,GAAI,EAAE;;QAEjB;QACA,IAAI,CAACE,aAAY,GAAI,IAAI;;QAEzB;QACAI,UAAU,CAAC,MAAM;UACf,IAAI,CAACJ,aAAY,GAAI,KAAK;QAC5B,CAAC,EAAE,IAAI,CAAC;MACV,EAAE,OAAOK,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,gCAAgC,EAAEA,KAAK,CAACP,OAAO,CAAC;QAC9DS,KAAK,CAAC,oDAAoD,C